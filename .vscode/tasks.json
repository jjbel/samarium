{
    // some useful vscode tasks
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake --preset=default",
            "group": "build"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build --preset=default",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}